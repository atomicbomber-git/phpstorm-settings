<templateSet group="klik-ops">
  <template name="vminput" value="&lt;div class=&quot;form-group&quot;&gt;&#10;    &lt;label for=&quot;$field$&quot;&gt;&#10;        $label$:&#10;    &lt;/label&gt;&#10;&#10;    &lt;input&#10;            id=&quot;$field$&quot;&#10;            v-model=&quot;$field$&quot;&#10;            placeholder=&quot;$label$&quot;&#10;            class=&quot;form-control&quot;&#10;            :class=&quot;{ error: get(this.error_data, '$field$[0]', false) }&quot;&#10;            type=&quot;text&quot;&#10;    /&gt;&#10;    &lt;label class=&quot;error&quot;&gt;&#10;        {{ get(this.error_data, '$field$[0]', '') }}&#10;    &lt;/label&gt;&#10;&lt;/div&gt;" description="" toReformat="true" toShortenFQNames="true">
    <variable name="field" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="label" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="VUE_TEMPLATE" value="true" />
    </context>
  </template>
  <template name="mbinput" value="&lt;div class=&quot;form-group&quot;&gt;&#10;    &lt;label for=&quot;$field$&quot;&gt; $Label$: &lt;/label&gt;&#10;    &lt;input name=&quot;$field$&quot;&#10;           id=&quot;$field$&quot;&#10;           type=&quot;text&quot;&#10;           class=&quot;form-control &lt;?= $errors-&gt;has(&quot;$field$&quot;) ? &quot;error&quot; : &quot;&quot; ?&gt;&quot;&#10;           placeholder=&quot;$Label$&quot;&#10;           value=&quot;&lt;?= $this-&gt;old(&quot;$field$&quot;) ?&gt;&quot;&gt;&#10;    &lt;?php if ($errors-&gt;has(&quot;$field$&quot;)) : ?&gt;&#10;        &lt;label class=&quot;error&quot;&gt;&#10;            &lt;?= $errors-&gt;first(&quot;$field$&quot;) ?&gt;&#10;        &lt;/label&gt;&#10;    &lt;?php endif ?&gt;&#10;&lt;/div&gt;" description="" toReformat="true" toShortenFQNames="true">
    <variable name="field" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="Label" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML_TEXT" value="true" />
      <option name="VUE_TEMPLATE" value="true" />
    </context>
  </template>
</templateSet>