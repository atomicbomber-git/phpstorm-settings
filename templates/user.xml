<templateSet group="user">
  <template name="bulinput" value="&lt;div class=&quot;field&quot;&gt;&#10;    &lt;label class=&quot;label&quot;&#10;           for=&quot;$FIELD$&quot;&#10;    &gt;$LABEL$&lt;/label&gt;&#10;    &lt;div class=&quot;control @error('$FIELD$') has-icons-right @enderror&quot;&gt;&#10;        &lt;input id=&quot;$FIELD$&quot;&#10;               name=&quot;$FIELD$&quot;&#10;               class=&quot;input @error('$FIELD$') is-danger @enderror&quot;&#10;               type=&quot;text&quot;&#10;               placeholder=&quot;$LABEL$&quot;&#10;               value=&quot;{{ old(&quot;$FIELD$&quot;)  }}&quot;&#10;        &gt;&#10;        @error('$FIELD$')&#10;        &lt;span class=&quot;icon is-small is-right&quot;&gt;&#10;                &lt;i class=&quot;fas fa-exclamation-triangle&quot;&gt;&lt;/i&gt;&#10;            &lt;/span&gt;&#10;        @enderror&#10;    &lt;/div&gt;&#10;    @error('$FIELD$')&#10;    &lt;p class=&quot;help is-danger&quot;&gt; {{ $message }} &lt;/p&gt;&#10;    @enderror&#10;&lt;/div&gt;&#10;$END$" description="Bulma Input" toReformat="true" toShortenFQNames="true">
    <variable name="FIELD" expression="" defaultValue="" alwaysStopAt="true" />
